<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences">

        <ListPreference
            app:key="language"
            app:title="Language"
            app:summary=""
            app:defaultValue="en"
            app:entries="@array/languages"
            app:entryValues="@array/languages"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="Black Theme"
            app:summaryOn="On"
            app:summaryOff="Off"/>

    </PreferenceCategory>

</PreferenceScreen>