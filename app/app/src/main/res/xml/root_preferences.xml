<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/preferences">

        <ListPreference
            app:key="language"
            app:title="@string/language"
            app:summary=""
            app:defaultValue="en"
            app:entries="@array/languages"
            app:entryValues="@array/languages"/>

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/black_theme"
            app:summaryOn="@string/on"
            app:summaryOff="@string/off"/>

    </PreferenceCategory>

</PreferenceScreen>